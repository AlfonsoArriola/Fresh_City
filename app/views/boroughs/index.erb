
<div class="row">
  <div class="col-lg-5 col-sm-12 p-2">
   <h2> Boroughs</h2>

        <h4>
          <!--  if current_admin  -->
               <%= link_to t('site_home.add_new_site') , new_borough_path %>
         <!--   end  -->
        </h4>
  
  </div>
  <div class="col-lg-7 col-sm-12 p-4">
      
      <u> <h4>  Boroughs </h4> </u>
     
   <% @boroughs.each do |borough| %>
            <div class="p-5 mb-4 bg-info text-white bubble text-center ">
               <h3> <div> <%= borough.name %> </div></h3>
                  
                 <br>  
                 
                 <%= link_to 'Full Info', borough_path(borough), 'data-disable-with': "Hold, please..." %>|
              
              <%= link_to 'Edit', edit_borough_path(borough), 'data-disable-with': "Transferring now..." %>|

                <%= link_to 'Remove', borough_path(borough), method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
   <% end %>
    
  </div>
</div>






