<%= form_for @prospect do |f| %>
 <% if @prospect.errors.any? %>
   <h2> Errors:</h2>
     <ul>
     	   <% @prospect.errors.full_messages.each do |message| %>
     	<li> <%= message %></li>
     	<% end %>
     </ul>
 <% end %>
		  <div>
		 	 <%= f.label :name %> <br>
		 	 <%= f.text_field :name %>
		  </div>
		  
		  <div>
		 	 <%= f.label :location %> <br>
		 	 <%= f.text_field :location %>
		  </div>
		   <div>
		 	 <%= f.label :phone %> <br>
		 	 <%= f.text_field :phone %>
		  </div>
		   <div>
		 	 <%= f.label :e_mail %> <br>
		 	 <%= f.text_field :e_mail %>
		  </div>
		
		 <div>
		 	 <%= f.label :comment %> <br>
		 	 
		 	 <%= f.text_area :comment, size: "40x12" %>
		 </div>	
		


		 <div>
		  	<%= f.submit %>
		 </div>

<% end %>