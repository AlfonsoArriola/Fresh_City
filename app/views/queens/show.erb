<div class="row p-4">
	<div class="col-lg-6 col-sm-12 pl-6">
		        <div class="show_name">
					<h2><%= @site.name %></h2>
					    <br>
					    <h4><%= @site.website %></h4>
				</div>
		
			<div>
				<u class="show_page_catergory"> <%= t('show_page.cost') %> </u> <br>
				 <%= @site.cost%>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.address') %></u> <br>
				 <%= @site.address %>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.borough') %></u> <br>
				 <%= @site.borough.name%>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.phone') %></u> <br>
				 <%= @site.phone %>
			</div>
			<div>
				<u class="show_page_catergory"> T<%= t('show_page.location') %></u> <br>
				 <%= @site.location_type%>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.gender') %></u> <br>
				 <%= @site.gender %>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.age_range') %></u> <br>
				<%= @site.age_range %>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.operation_hours') %></u> <br>
				 <%= @site.days_of_the_week_and_hours_of_operation %>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.towels') %> </u> <br>
				<%= @site.towel %>
			</div>
			<div>
				<u class="show_page_catergory"><%= t('show_page.soap') %> </u> <br>
				<%= @site.soap %>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.fem_hy') %></u> <br>
				<%= @site.feminine_hygiene %>
			</div>
			<div>
				<u class="show_page_catergory"> <%= t('show_page.shower_shoes') %> </u> <br>
				<%= @site.shower_shoe %>
			</div>
			    <br>
			<div>
				<u class="show_page_catergory"><%= t('show_page.notes') %></u> <br>
			    <%= @site.note %>
			</div>

			<div>
				<u class="show_page_catergory"> <%= t('show_page.update') %></u> <br>
				<%= @site.updated_at.strftime("%B %-d, %Y")%>
			</div>
		
	</div>
	<div class="col-lg-6 col-sm-12">
      <div class="row">
		    	<div class="col site_profile_image">
		    		<% if @site.image.attached? %>
                        <div class="row-6 my-3">
                          <%= image_tag @site.image %>
                        </div>
                                  <% else %>
                        <div class="row-6 my-3">
                          <%= image_tag "one_orange_towel.jpg" %>
              
                        </div>
                <% end %>      
		    		
		    	</div>
		    </div>
             <div class="row">
				<div class="col my-4">		
				
					<iframe width="500" height="500" frameborder="0" style="border:0"
						 src="https://www.google.com/maps/embed/v1/place?key=<%=ENV['GOOGLE_MAPS_KEY']%>&q=<%= @site.address %>&zoom=14&language=<%= t('generic.map') %>"
						 allowfullscreen>
					</iframe>

											
				</div>
             </div>
	</div>
</div>