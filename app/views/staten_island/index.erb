<h2> <%= t('staten_island.home_page.header') %></h2>

<h3> <%= t('staten_island.home_page.sub_header') %></h3>

  <h4> List Of All FREE Staten Island Sites </h4>
     <% if @si_free_sites.empty? %>
			     <div class="row">
					<div class="col">
						<p class="text-center">
							No Free Sites Available, please check back later.
						</p>		
					</div>
			     </div>

	<% else %>


		   	<% @si_free_sites.each do |si_free_site| %>
				<div class="p-3 mb-4 bg-info text-white">
				     <u>  Name </u>
				       <div> <%= si_free_site.name %> </div>
				     <br>
				       <u>  Address </u>
				       <div> <%= si_free_site.address %> </div>
				     <br>
				     <u>  Cost </u>
				       <div> <%= si_free_site.cost %> </div>
				     <br>
				     
				</div>
			<% end %>
   <% end %>


<h4> List Of All CHEAP Staten Island Sites </h4>

    <% if @si_cheap_sites.empty? %>
			     <div class="row">
					<div class="col">
						<p class="text-center">
							No Cheap Sites Available, please check back later.
						</p>		
					</div>
			     </div>
	<% else %>

		   <% @si_cheap_sites.each do |si_cheap_site| %>
				<div class="p-3 mb-4 bg-info text-white">			  
	     		     <u>  Name </u>
				       <div> <%= si_cheap_site.name %> </div>
				     <br>
				       <u>  Address </u>
				       <div> <%= si_cheap_site.address %> </div>
				     <br>
				     <u>  Cost </u>
				       <div> <%= si_cheap_site.cost %> </div>
				     <br>
				     
				</div>
			<% end %>
	<% end %>